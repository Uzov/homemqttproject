services:
    mosquitto:
        image: eclipse-mosquitto:2.0.15
        ports:
            - 1883:1883
            - 9001:9001
            - 8883:8883
        volumes:
            - ./mosquitto/config:/mosquitto/config/
            - ./mosquitto/data:/mosquitto/data/
            - ./mosquitto/log:/mosquitto/log/
        restart: unless-stopped
